@model IEnumerable<GreenPro.Data.Service>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}

<h2>Service List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@Html.Grid(Model).Columns(columns =>
{
    columns.Add(a => a.Service_Name).Titled("Service Name").Filterable(true);
    columns.Add(a => a.Service_Description).Titled("Service Description");
    columns.Add(a => a.Service_Price).Titled("Service Price").Filterable(true);
    columns.Add(a => a.IsAddOn).Titled("Add-On").Filterable(false);
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(d => @Html.ActionLink("Edit", "Edit", new { id = d.ServiceID }));    
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(d => @Html.ActionLink("Delete", "Delete", new { id = d.ServiceID }));

}).WithPaging(20).Filterable()
